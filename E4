var  ht, nb, tva, ttc : REEL

DEBUT
	 ECRIRE "saisir le prix HT de l'article"
	 LIRE ht
	 ECRIRE "saisir le nombre d'articles"
	 LIRE nb
	 ECRIRE "saisir le taux de tva (%)"
	 LIRE tva 
	 ttc <- nb * (ht+(ht * tva / 100)))
	 ECRIRE "le prix TTC pour", nb ,"articles avec un prix", ht, "euro et un taux de tva Ã ", tva,"% est", TTC
